root=true

[*]
charset=utf-8
end_of_line=lf
indent_size=4
indent_style=space
insert_final_newline=true
max_line_length = 78
trim_trailing_whitespace=true

[*.nix]
indent_size=2

[*.bib]
indent_size=1

[*.{tex,md}]
indent_size=unset

[Justfile]
indent_style=tab

[.latexmkrc]
indent_size=2

[*.lock]
indent_size = unset
indent_style = unset

